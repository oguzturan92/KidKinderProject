@model KidKinder.Entities.Gallery
@{
    ViewBag.Title = "UpdateGallery";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">

    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">

                <div class="row">
                    <div class="col-sm-12">

                        <div class="card">
                            <div class="card-header">
                                <h5>Sınıf Güncelle</h5>
                                <span>Sınıf ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Id</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.GalleryId, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Sıra No</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.GalleryRow, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Resim Url</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="GalleryUrl" value="@Model.GalleryUrl" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Onay Durumu</label>
                                        <div class="col-sm-10">
                                            <select value="GalleryApproval" name="GalleryApproval" class="form-control">
                                                @if (Model.GalleryApproval)
                                                {
                                                    <option value="True">Aktif</option>
                                                    <option value="False">Pasif</option>
                                                }
                                                else
                                                {
                                                    <option value="False">Pasif</option>
                                                    <option value="True">Aktif</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary" type="submit">Sınıfı Kaydet</button>
                                    <a href="/Gallery/GalleryList" class="btn btn-outline-dark">Geri</a>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <div id="styleSelector">

    </div>
</div>