@model List<KidKinder.Entities.Gallery>
@{
    ViewBag.Title = "GalleryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Resim Tablosu</h5>
                        <span>Resim ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Sıra No</th>
                                        <th>Resim</th>
                                        <th>Onay Durumu</th>
                                        <th colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.GalleryId</td>
                                            <td>@item.GalleryRow</td>
                                            <td><img src="@item.GalleryUrl" alt="" style="height:50px; object-fit:cover;"/></td>
                                            @if (item.GalleryApproval)
                                            {
                                                <td class="btn btn-success" style="border-radius:100px; padding:5px; margin-top:15px; margin-left:20px;">@item.GalleryApproval</td>
                                            }
                                            else
                                            {
                                                <td class="btn btn-danger" style="border-radius:100px; padding:5px; margin-top:15px; margin-left:20px;">@item.GalleryApproval</td>
                                            }
                                            <td><a href="/Gallery/DeleteGallery/@item.GalleryId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Gallery/UpdateGallery/@item.GalleryId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Gallery/CreateGallery" class="btn btn-primary">Yeni Resim Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>