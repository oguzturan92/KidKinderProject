
@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}


    @Html.Action("ContactHeaderPartial", "Contact")

    <div class="container-fluid pt-5">
        <div class="container">
            <div class="text-center pb-2">
                <p class="section-title px-5">
                    <span class="px-2">İLETİŞİM</span>
                </p>
                <h1 class="mb-4">Bize Ulaşın</h1>
            </div>
            <div class="row">

                <div class="col-lg-7 mb-5">
                    <div class="contact-form">
                        <div id="success"></div>
                        <form action="NewMessage" method="post" id="contactForm" novalidate="novalidate">
                            <div class="control-group">
                                <input type="text"
                                       class="form-control"
                                       id="name"
                                       name="nameSurname"
                                       placeholder="Ad Soyad"
                                       required="required"
                                       data-validation-required-message="Please enter your name" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <input type="email"
                                       class="form-control"
                                       id="email"
                                       name="email"
                                       placeholder="Email"
                                       required="required"
                                       data-validation-required-message="Please enter your email" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <input type="text"
                                       class="form-control"
                                       id="subject"
                                       name="subject"
                                       placeholder="Konu"
                                       required="required"
                                       data-validation-required-message="Please enter a subject" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <textarea class="form-control"
                                          rows="6"
                                          id="message"
                                          name="message"
                                          placeholder="Mesaj"
                                          required="required"
                                          data-validation-required-message="Please enter your message"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div>
                                <button class="btn btn-primary py-2 px-4"
                                        type="submit"
                                        id="sendMessageButton">
                                    Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                @Html.Action("ContactAddressPartial", "Contact")
                

            </div>
        </div>
    </div>
