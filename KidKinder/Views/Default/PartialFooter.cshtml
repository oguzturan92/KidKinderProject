@model KidKinder.Entities.Address

<div class="container-fluid bg-secondary text-white mt-5 py-5 px-sm-3 px-md-5">
    <div class="row pt-5">
        <div class="col-lg-3 col-md-6 mb-5">
            <a href=""
               class="navbar-brand font-weight-bold text-primary m-0 mb-4 p-0"
               style="font-size: 40px; line-height: 40px">
                <i class="flaticon-043-teddy-bear"></i>
                <span class="text-white">KidKinder</span>
            </a>
            <p>
                Labore dolor amet ipsum ea, erat sit ipsum duo eos. Volup amet ea
                dolor et magna dolor, elitr rebum duo est sed diam elitr. Stet elitr
                stet diam duo eos rebum ipsum diam ipsum elitr.
            </p>
            <div class="d-flex justify-content-start mt-4">
                <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                   style="width: 38px; height: 38px"
                   href="#">
                    <i class="fab fa-twitter"></i>
                </a>
                <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                   style="width: 38px; height: 38px"
                   href="#">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                   style="width: 38px; height: 38px"
                   href="#">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                   style="width: 38px; height: 38px"
                   href="#">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-5">
            <h3 class="text-primary mb-4">İletişim</h3>
            <div class="d-flex">
                <h4 class="fa fa-map-marker-alt text-primary"></h4>
                <div class="pl-3">
                    <h5 class="text-white">Adres</h5>
                    <p>@Model.AddressDetail</p>
                </div>
            </div>
            <div class="d-flex">
                <h4 class="fa fa-envelope text-primary"></h4>
                <div class="pl-3">
                    <h5 class="text-white">Email</h5>
                    <p>@Model.Email</p>
                </div>
            </div>
            <div class="d-flex">
                <h4 class="fa fa-phone-alt text-primary"></h4>
                <div class="pl-3">
                    <h5 class="text-white">Telefon Numarası</h5>
                    <p>@Model.Phone</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-5">
            <h3 class="text-primary mb-4">Hızlı Linkler</h3>
            <div class="d-flex flex-column justify-content-start">
                <a class="text-white mb-2" href="/Default/Index"><i class="fa fa-angle-right mr-2"></i>Anasayfa</a>
                <a class="text-white mb-2" href="/About/Index"><i class="fa fa-angle-right mr-2"></i>Hakkımızda</a>
                <a class="text-white mb-2" href="/ClassRoom/Index"><i class="fa fa-angle-right mr-2"></i>Eğitim Grupları</a>
                <a class="text-white mb-2" href="/Teacher/Index"><i class="fa fa-angle-right mr-2"></i>Öğretmenler</a>
                <a class="text-white mb-2" href="/Gallery/Index"><i class="fa fa-angle-right mr-2"></i>Galeri</a>
                <a class="text-white mb-2" href="/Contact/Index"><i class="fa fa-angle-right mr-2"></i>İletişim</a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-5">
            <h3 class="text-primary mb-4">Abone Olun</h3>
            <form action="/MailSubscribe/NewMailSubscribe" method="post">
                <div class="form-group">
                    <input type="text"
                           name="nameSurname"
                           class="form-control border-0 py-4"
                           placeholder="Adınız Soyadınız"
                           required="required" />
                </div>
                <div class="form-group">
                    <input type="email"
                           name="email"
                           class="form-control border-0 py-4"
                           placeholder="Email Adresiniz"
                           required="required" />
                </div>
                <div>
                    <button class="btn btn-primary btn-block border-0 py-3"
                            type="submit">
                        Kayıt Ol
                    </button>
                </div>
            </form>
        </div>
    </div>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d195884.7199739243!2d32.76276475!3d39.903376550000004!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d347d520732db1%3A0xbdc57b0c0842b8d!2sAnkara!5e0!3m2!1str!2str!4v1709364101680!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>