@model KidKinder.Models.AboutModel
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-primary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center"
         style="min-height: 400px">
        <h3 class="display-3 font-weight-bold text-white">Hakkımızda</h3>
        <div class="d-inline-flex text-white">
            <p class="m-0"><a class="text-white" href="/Default/Index">Ana Sayfa</a></p>
            <p class="m-0 px-2">/</p>
            <p class="m-0">Hakkımızda</p>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5">
                <img class="img-fluid rounded mb-5 mb-lg-0"
                     src="~/Templates/kidkinder-1.0.0/img/@Model.About.BıgImageUrl"
                     alt="" />
            </div>
            <div class="col-lg-7">
                <p class="section-title pr-5">
                    <span class="pr-2">@Model.About.Header</span>
                </p>
                <h1 class="mb-4">@Model.About.Title</h1>
                <p>
                    @Model.About.Description
                </p>
                <div class="row pt-2 pb-4">
                    <div class="col-6 col-md-4">
                        <img class="img-fluid rounded" src="~/Templates/kidkinder-1.0.0/img/@Model.About.SmallImageUrl" alt="" />
                    </div>
                    <div class="col-6 col-md-8">
                        <ul class="list-inline m-0">
                            @foreach (var item in Model.AboutLists)
                            {
                                <li class="py-2 border-top border-bottom">
                                    <i class="fa fa-check text-primary mr-3"></i>@item.Description
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <a href="" class="btn btn-primary mt-2 py-2 px-4">daha fazla bilgi edin...</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Facilities Start -->
<div class="container-fluid pt-5">
    <div class="container pb-3">
        <div class="row">

            @foreach (var item in Model.Services)
            {
                <div class="col-lg-4 col-md-6 pb-1">
                    <div class="d-flex bg-light shadow-sm border-top rounded mb-4"
                         style="padding: 30px">
                        <i class="@item.IconUrl h1 font-weight-normal text-primary mb-3"></i>
                        <div class="pl-4">
                            <h4>@item.Title</h4>
                            <p class="m-0">
                                @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Facilities Start -->
<!-- Team Start -->
<div class="container-fluid pt-5">
    <div class="container">
        <div class="text-center pb-2">
            @*<p class="section-title px-5">
                <span class="px-2">Our Teachers</span>
            </p>*@
            <h1 class="mb-4">Öğretmenlerimiz</h1>
        </div>
        <div class="row">
            @foreach (var item in Model.Teachers)
            {
                <div class="col-md-6 col-lg-3 text-center team mb-5">
                    <div class="position-relative overflow-hidden mb-4"
                         style="border-radius: 100%">
                        <img class="img-fluid w-100" src="~/Templates/kidkinder-1.0.0/img/@item.ImageUrl" alt="" />
                        <div class="team-social d-flex align-items-center justify-content-center w-100 h-100 position-absolute">
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="#">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="#">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-outline-light text-center px-0"
                               style="width: 38px; height: 38px"
                               href="#">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                    <h4>@item.NameSurname</h4>
                    <i>@item.Branch.Name</i>
                </div>
            }

        </div>
    </div>
</div>
<!-- Team End -->
